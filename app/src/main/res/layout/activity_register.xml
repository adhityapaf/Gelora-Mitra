<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/welcome_screen_background"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".activity.RegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logoGeloraWelcome"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/logo_gelora" />

        <TextView
            android:id="@+id/registrasiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoGeloraWelcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Registrasi"
            android:textColor="@color/hitam"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/formRegistrasiRelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/registrasiLabel"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/namaMitraLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Mitra"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/namaMitraField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/namaMitraLabel"
                android:layout_marginTop="8dp"
                android:background="@drawable/green_stroke_rectangle"
                android:hint="Isi Nama Anda Disini.."
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <TextView
                android:id="@+id/emailMitraLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaMitraField"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailMitraField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/emailMitraLabel"
                android:layout_marginTop="8dp"
                android:background="@drawable/green_stroke_rectangle"
                android:hint="Isi Email Anda Disini.."
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <TextView
                android:id="@+id/passwordMitraLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailMitraField"
                android:layout_marginTop="12dp"
                android:text="Password"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordMitraField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/passwordMitraLabel"
                android:layout_marginTop="8dp"
                android:background="@drawable/green_stroke_rectangle"
                android:hint="Isi Password Anda Disini.."
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <Button
                android:id="@+id/daftarSubmitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_green_rounded_5dp"
                android:elevation="10dp"
                android:text="Daftar"
                android:layout_marginTop="20dp"
                android:layout_below="@id/passwordMitraField"
                android:textAllCaps="false"
                android:textColor="@color/putih"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwordMitraField"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:elevation="10dp"
                android:id="@+id/progressbar_circle"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>